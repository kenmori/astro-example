---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import Lists from '../components/lists.astro';
import Item from "../components/item.astro";
import { ghostClient } from '../lib/ghost';
const posts = await ghostClient.posts
    .browse({
        limit: 'all',
    })
    .catch((err) => {
        console.error(err);
    });
console.log(posts)
---

<Layout title="template">
	<main>
		<h1>Welcome to <span class="text-gradient">もりけん塾<span></h1>
		<Lists>
			<Item posts={posts} slot="item" />
			<img src="https://terracetech.jp/wp-content/uploads/2023/02/astro.png" slot="header-image" width="300">
		</Lists>
	</main>
</Layout>
